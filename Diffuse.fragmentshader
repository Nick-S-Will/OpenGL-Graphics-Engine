#version 330 // OpenGL version 3.3

in vec3 retNormal;
in vec2 retTexCoord;

uniform vec3 LightDirection;
uniform vec3 LightColor;
uniform vec3 AmbientLight;
uniform vec3 DiffuseColor;
uniform sampler2D sampler1;
uniform sampler2D sampler2;

out vec4 FragColor;

void main()
{
	vec3 lambertian = dot(normalize(LightDirection), retNormal) * LightColor;
	vec3 color = clamp(lambertian + AmbientLight, 0.0f, 1.0f) * DiffuseColor;
	FragColor = vec4(color, 1.0f) * texture(sampler1, retTexCoord);
}